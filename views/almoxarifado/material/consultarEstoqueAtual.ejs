<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title></title>

    <!-- Bootstrap -->
    <link href='/stylesheets/bootstrap.min.css' rel='stylesheet'/>
    <link href='/stylesheets/submenu.css' rel='stylesheet'>
    <script src='/javascripts/jquery-1.11.3.min.js'></script>
    <script src='/javascripts/bootstrap.min.js'></script>

    <style>
     #wrapper { width: 980px; position: center;}
     #search input { display: block; float: left; width: 500px; }
     #alerta { color: red; }
    </style>

    

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
     <header>    
      <% include ../../navBarMenuPrincipal %> 
     </header> 

   
<div id="wrapper" class="container"> 
  <form class="form-horizontal">

  <legend>Estoque atual</legend>
  <table class="table table-striped table-hover ">
    <thead>
        <tr>
           <th>Nº</th>
           <th>Nome</th>
           <th>Unidade</th>
           <th>Estoque min.</th>
           <th>Estoque Atual</th>
           <th>Observação</th>
           <th>Situação</th>
        </tr>
    
    </thead>
    <tbody>
    <% if(materiais !== null) {  
      materiais.forEach(function(material, index) { %> 
        <tr>
          <td><%- (index + 1) %></td>
          <td><%- material.nome %></td>
          <td><%- material.unidade %></td>
          <td><%- material.estoque_min %></td>
          <td><strong><%- material.estoque_atual %></strong></td>
          <td><%- material.observacao %></td>
          <% if(material.estoque_atual <= material.estoque_min) { %>
          <td><div id="alerta"><strong>COMPRAR</strong></div></td>
          <% } else { %>
          <td>OK</td>
          <% } %>
        </tr>
      <% }) 
    } %>
    </tbody>
  </table>
</form>
</div>    
  </body>
</html>
