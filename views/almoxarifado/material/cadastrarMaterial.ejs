  <body>
     <header>    
      <% include ../../navBarMenuPrincipal %> 
     </header> 

   
<div id="wrapper" class="container"> 
<form class="form-horizontal" action="/cadastrar_material" method="POST">

  <fieldset>
    <legend>Cadastrar Material</legend>
    <div class="form-group">
      <label for="inputNome" class="col-lg-2 control-label">Nome</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputNome" placeholder="Digite o nome do material" name="material[nome]">
      </div>
    </div>

    <div class="form-group">
       <label for="select" class="col-lg-2 control-label">Unidade</label>
       <div class="col-lg-10">
         <select class="form-control" id="select" name="material[unidade]">
           <option>Caixa</option>
           <option>Fardo</option>
           <option>Frasco</option>
           <option>Kilo</option>
           <option>Litro</option>
           <option>Pacote</option>
           <option>Unidade</option>
         </select>
       </div>
     </div>

    <div class="form-group">
      <label for="inputEstoqueMin" class="col-lg-2 control-label">Estoque mínimo</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="inputPassword" placeholder="Qtde mínima em estoque" name="material[estoque_min]">
      </div>
    </div>

    <div class="checkbox">
      <label>
        <input type="checkbox" checked name="material[status]"> Ativo
      </label>
    </div>

    <br>

    <div class="form-group">
      <label for="textArea" class="col-lg-2 control-label">Obs</label>
      <div class="col-lg-10">
        <textarea class="form-control" rows="3" id="textArea" name="material[observacao]"></textarea>
      </div>
    </div>

    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <!--<button type="reset" class="btn btn-default">Cancel</button>-->
        <button type="submit" class="btn btn-primary">Cadastrar</button>
      </div>
    </div>

  </fieldset>
</form>
 
 <label>
    <h3><%= mensagem %></h3>
 </label>

</div>
  </body>
</html>
