<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title></title>

    <!-- Bootstrap -->
    <link href='/stylesheets/bootstrap.min.css' rel='stylesheet'/>
    <link href='/stylesheets/submenu.css' rel='stylesheet'>
    <script src='/javascripts/jquery-1.11.3.min.js'></script>
    <script src='/javascripts/bootstrap.min.js'></script>

    <style>
     #wrapper { width: 980px; position: center;}
     #search input { display: block; float: left; width: 500px; }
     #search button { display: block; float: right; margin-right: 200px; }
     footer { text-align: center; margin-top: 530px; }
     footer small { font-size: 30px;}
    </style>

    

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
     <header>    
      <% include ../../navBarMenuPrincipal %> 
     </header> 

   
<div id="wrapper" class="container"> 
  
  <form class="form-horizontal" action="/pesquisar_material" method="POST">

    <fieldset> 
       <legend>Pesquisar Material</legend>
        <div class="form-group">
         <label for="inputNome" class="col-lg-2 control-label">Nome</label>
         <div id="search" class="col-lg-10">
          <input type="text" class="form-control" id="inputNome" placeholder="Digite o nome do material" name="material[nome]">
          <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
        </div>  
   </fieldset>
  </form>
  
  <table class="table table-striped table-hover ">
    <thead>
        <tr>
           <th>Nº</th>

           <th>Nome</th>
           <th>Unidade</th>
           <th>Estoque min.</th>
           <th>Situação</th>
           <th>Observação</th>
           <th>Aterar</th>
           <th>Excluir</th>
        </tr>
    </thead>
    <tbody>
    <% if(materiais !== null) {  
      materiais.forEach(function(material, index) { %>
        <tr>
          <td><%- (index + 1) %></td>
          <td><%- material.nome %></td>
          <td><%- material.unidade %></td>
          <td><%- material.estoque_min %></td>
          <td><%- material.status %></td>
          <td><%- material.observacao %></td>
          <td><a href="/editar_material/<%- material.id %>">alterar</a></td>
          <td><a href="/excluir_material">excluir</a></td>
        </tr>
      <% }) 
    } %>
    </tbody>
  </table>

  <label>
    <h3><%= mensagem %></h3>
  </label>
</div>



    <footer>
      <small class="label label-danger">Prefeitura Municipal de Caraguatatuba - Secretaria de Administração - Av Siqueira Campos nº xxx Centro - Caraguatatuba-SP tel 3883-8283</small>
    </footer>
    
  </body>
</html>
